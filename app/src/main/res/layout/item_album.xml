<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_item_album"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_album"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_girl"
            android:layout_width="180dp"
            android:layout_height="164dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/txt_name_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_more_album"
                android:ellipsize="end"
                android:lines="1"
                android:text="All of me"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_artist_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/img_more_album"
                android:lines="1"
                android:text="John Legend"
                android:textColor="@color/gray"
                android:layout_below="@+id/txt_name_album" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_more_album"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more_white" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>